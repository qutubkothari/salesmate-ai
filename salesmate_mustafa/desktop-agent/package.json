{
  "name": "sak-whatsapp-desktop-agent",
  "version": "1.0.6",
  "description": "Desktop agent for WhatsApp AI Sales Assistant - Hybrid Architecture",
  "main": "index.js",
  "bin": "index.js",
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "pkg . --output ../public/download/sak-whatsapp-agent-windows.exe",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "keywords": [
    "whatsapp",
    "ai",
    "sales",
    "desktop-agent"
  ],
  "author": "SAK",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-notifier": "^10.0.1",
    "puppeteer-core": "^21.6.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.26.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  }
}
